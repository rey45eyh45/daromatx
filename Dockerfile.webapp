# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

COPY mini-app/package*.json ./
RUN npm ci

COPY mini-app/ .
RUN npm run build

# Production stage
FROM nginx:alpine

COPY --from=builder /app/dist /usr/share/nginx/html
COPY nginx/webapp.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
